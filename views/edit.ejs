<%- include('./partials/header.ejs') %>

  <div class="container">
    <div class="row">
      <div class="col-sm-6 mt-5">
        <h2 class="alert alert-info text-center">Edit Student</h2>
        <form method="post" action="/student/update/<%= data._id%>">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" value="<%= data.name%>" name="name" />
          </div>
          <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="text" class="form-control" id="age" value="<%= data.age%>" name="age" />
          </div>
          <div class="mb-3">
            <label for="fees" class="form-label">Fees</label>
            <input type="text" class="form-control" id="fees" name="fees" value="<%= data.fees%>" />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="submit" class="btn btn-secondary">Back to Home page</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>